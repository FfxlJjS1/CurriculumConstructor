<Window x:Class="CurriculumConstructor.SettingMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurriculumConstructor"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="SettingMenuWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="150" MaxWidth="400"/>
            <ColumnDefinition MinWidth="500"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" Margin="5">
            <ListView x:Name="SettingMenu">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0 0 0 10">
                            <TextBlock Uid="{Binding Path=Id}" TextAlignment="Center" Text="{Binding Path=Text}" MouseUp="TextBlock_MouseUp"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
